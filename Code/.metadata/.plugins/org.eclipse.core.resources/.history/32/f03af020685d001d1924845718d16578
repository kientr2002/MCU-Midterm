#include <fsm_simple_buttons.h>
int counter = 0;
//Bai 2
void fsm_simple_buttons_run (){

	switch(status){
	case RESET:
		//TO DO
		display7SEG(0);
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter = 1;
			display7SEG(counter);
			status = INC;
		} else
			if (isButtonDECpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = DEC;
		}
		else {
			//NOTHING
		}
		break;
	case INC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = INC;
		} else
			if (isButtonDECpressed() == 1){
			counter--;
			display7SEG(counter);
			status = DEC;
		}
		else {
			//NOTHING
		}
		break;
	case DEC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter++;
			display7SEG(counter);
			status = INC;
		} else
			if (isButtonDECpressed() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
		}
		else {
			//NOTHING
		}
		break;
	default:
		break;
	}
}
//Bai 3
void fsm_simple_buttons2_run (){
	switch(status){
	case RESET:
		//TO DO
		display7SEG(0);
		if(isButtonINCholding() == 1){
			counter = 1;
			display7SEG(counter);
			status = HOLD_INC;
		}
		if(isButtonDECholding() == 1){
			counter = 9;
			display7SEG(counter);
			status = HOLD_DEC;
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		if(isButtonINCpressed() == 1){
			counter = 1;
			display7SEG(counter);
			status = INC;
		}
		if (isButtonDECpressed() == 1){
			counter = 9;
			display7SEG(counter);
			status = DEC;
		}

		break;
	case INC:
		//TO DO
		if(isButtonINCholding() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(9);
			status = HOLD_INC;
		}
		if(isButtonDECholding() == 1){
			counter--;
			display7SEG(counter);
			status = HOLD_DEC;
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = INC;
		}
		if (isButtonDECpressed() == 1){
			counter--;
			display7SEG(counter);
			status = DEC;
		}
		break;
	case HOLD_INC:
		//TO DO
		if(isButtonINCholding() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = HOLD_INC;
		}
		if(isButtonDECholding() == 1){
			counter--;
			display7SEG(counter);
			status = HOLD_DEC;
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = INC;
		}
		if (isButtonDECpressed() == 1){
			counter--;
			display7SEG(counter);
			status = DEC;
		}
		break;
	case DEC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		if(isButtonINCpressed() == 1){
			counter++;
			display7SEG(counter);
			status = INC;
		}
		if (isButtonDECpressed() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
		}
		if(isButtonINCholding() == 1){
			counter++;
			display7SEG(counter);
			status = HOLD_INC;
		}
		if(isButtonDECholding() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
		}
		break;
	case HOLD_DEC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		if(isButtonINCpressed() == 1){
			counter++;
			display7SEG(counter);
			status = INC;
		}
		if (isButtonDECpressed() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
		}
		if(isButtonINCholding() == 1){
			counter++;
			display7SEG(counter);
			status = HOLD_INC;
		}
		if(isButtonDECholding() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
		}
		break;
	default:
		//NOTHING
		break;
	}
}
//Bai 4
void fsm_simple_buttons3_run (){

	switch(status){
	case RESET:
		//TO DO
		display7SEG(0);

		if(timer1_flag == 1){
			counter = 9;
			display7SEG(counter);
			status = COUNTDOWN;
			setTimer1(10000);
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter = 1;
			display7SEG(counter);
			status = INC;
			setTimer1(10000);
		} else
			if (isButtonDECpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = DEC;
			setTimer1(10000);
		}
		else if(isButtonINCholding() == 1){
			counter = 1;
			display7SEG(counter);
			status = HOLD_INC;
			setTimer1(10000);
		}
		else if(isButtonDECholding() == 1){
			counter = 9;
			display7SEG(counter);
			status = HOLD_DEC;
			setTimer1(10000);
		} else {
			//TO DO
		}
		break;
	case INC:
		//TO DO
		if(timer1_flag == 1){
			counter--;
			if(counter == -1) counter = 0;
			display7SEG(counter);
			status = COUNTDOWN;
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
			setTimer1(timer);
		}
		else if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = INC;
			setTimer1(timer);
		} else
			if (isButtonDECpressed() == 1){
			counter--;
			display7SEG(counter);
			status = DEC;
			setTimer1(timer);
		}else if(isButtonINCholding() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = HOLD_INC;
			setTimer1(timer);
		}
		else if(isButtonDECholding() == 1){
			counter--;
			display7SEG(counter);
			status = HOLD_DEC;
			setTimer1(timer);
		} else {
			//NOTHING
		}
		break;
	case HOLD_INC:
		//TO DO
		if(isButtonINCholding() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = HOLD_INC;
			setTimer1(timer);
		}
		if(isButtonDECholding() == 1){
			counter--;
			display7SEG(counter);
			status = HOLD_DEC;
			setTimer1(timer);
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
			setTimer1(timer);
		}
		if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = INC;
			setTimer1(timer);
		}
		if (isButtonDECpressed() == 1){
			counter--;
			display7SEG(counter);
			status = DEC;
			setTimer1(timer);
		}
		break;
	case DEC:
		//TO DO
		if(timer1_flag == 1){
			counter--;
			if(counter == -1) counter = 0;
			display7SEG(counter);
			status = COUNTDOWN;
		}
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
			setTimer1(timer);
		}
		else if(isButtonINCpressed() == 1){
			counter++;
			display7SEG(counter);
			status = INC;
			setTimer1(timer);
		} else
			if (isButtonDECpressed() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
			setTimer1(timer);
		}
		else if(isButtonINCholding() == 1){
			counter++;
			display7SEG(counter);
			status = HOLD_INC;
			setTimer1(timer);
		}
		else if(isButtonDECholding() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = HOLD_DEC;
			setTimer1(timer);
		}else {
			//NOTHING
		}
		break;
	case HOLD_DEC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
			setTimer1(timer);
		}
		if(isButtonINCpressed() == 1){
			counter++;
			display7SEG(counter);
			status = INC;
			setTimer1(timer);
		}
		if (isButtonDECpressed() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
			setTimer1(timer);
		}
		if(isButtonINCholding() == 1){
			counter++;
			display7SEG(counter);
			status = HOLD_INC;
			setTimer1(timer);
		}
		if(isButtonDECholding() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
			setTimer1(timer);
		}
		break;
	case COUNTDOWN:
		if(timer1_flag == 1){
			counter--;
			if(counter == -1){
				counter = 9;
			}
			display7SEG(counter);
			setTimer1(1000);
		}else if(isButtonRESETpressed() == 1) {
			counter = 0;
			status = RESET;
			setTimer1(timer);
		}else if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10){
				counter = 0;
			}
			display7SEG(counter);
			status = INC;
			setTimer1(timer);
		} else if(isButtonDECpressed() == 1){
			counter--;
			if(counter == 0){
				counter = 9;
			}
			display7SEG(counter);
			status = DEC;
			setTimer1(timer);
		} else{
			//...
		}
		break;
	default:
		break;
	}
}

