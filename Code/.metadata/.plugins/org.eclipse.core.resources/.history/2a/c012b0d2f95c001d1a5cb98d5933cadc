#include "fsm_hold_buttons.h"
int TimerHoldingButton = 300;
int button_flag = 0;
int KeyReg0 = NORMAL_STATE;
int KeyReg1 = NORMAL_STATE;
int KeyReg2 = NORMAL_STATE;
int KeyReg3 = NORMAL_STATE;
int checkingHoldButtonINC(){
	KeyReg0 = KeyReg1;
	KeyReg1 = KeyReg2;
	switch(status){
	case INC:
		KeyReg2 = HAL_GPIO_ReadPin(INC_GPIO_Port, INC_Pin);
		break;
	case DEC:
		KeyReg2 = HAL_GPIO_ReadPin(DEC_GPIO_Port, DEC_Pin);
		break;
	default:
		break;
	}
	if((KeyReg0 == KeyReg1) && (KeyReg1 == KeyReg2)){
		if(KeyReg3 != KeyReg2){
			KeyReg3 = KeyReg2;
			if(KeyReg2 == PRESSED_STATE){
				TimerHoldingButton = 300;
			}
		} else {
			TimerHoldingButton--;
			if(TimerHoldingButton == 0){
				if(KeyReg2 == PRESSED_STATE){
					return 1;
				}
				TimerHoldingButton = 0;
			}

		}
	}
	return 0;
}
void fsm_hold_buttons_run (){
	switch(status){
	case RESET:
		//TO DO
		display7SEG(0);
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter = 1;
			if(checkingHoldButtonINC() == 1){
				display7SEG(7);
			}
			display7SEG(counter);
			status = INC;
		} else
			if (isButtonDECpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = DEC;
		}
		else {
			//NOTHING
		}
		break;
	case INC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter++;
			if(counter == 10) counter = 0;
			display7SEG(counter);
			status = INC;
		} else
			if (isButtonDECpressed() == 1){
			counter--;
			display7SEG(counter);
			status = DEC;
		}
		else {
			//NOTHING
		}
		break;
	case HOLD_INC:
		//TO DO

		break;
	case DEC:
		//TO DO
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		}
		else if(isButtonINCpressed() == 1){
			counter++;
			display7SEG(counter);
			status = INC;
		} else
			if (isButtonDECpressed() == 1){
			counter--;
			if(counter == -1) counter = 9;
			display7SEG(counter);
			status = DEC;
		}
		else {
			//NOTHING
		}
		break;
	case HOLD_DEC:
		//TO DO

		break;
	default:
		//NOTHING
		break;
	}
}
