#include <fsm_simple_buttons.h>
int counter = 0;
void fsm_simple_buttons_run (){

	switch(status){
	case INIT:
		//TO DO
		resetDisplay7SEG();
		if(isButtonRESETpressed() == 1){
			counter = 0;
			display7SEG(counter);
			status = RESET;
		} else {

		}
		break;
	case RESET:
		//TO DO

		break;
	case INC:
		//TO DO
		if(counter > 0) counter++;
		else{
			//NOTHING
		}
		break;
	case DEC:
		//TO DO
		if(counter > 0) counter--;
		else{
			//NOTHING
		}
		break;
	default:
		break;
	}
}
